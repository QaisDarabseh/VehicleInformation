@model IEnumerable<VehicleInformation.Models.Domain.CarMake>

@{
    ViewData["Title"] = "Car Information";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="mb-4">
        <h3 class="fw-bold">Vehicle Information</h3>
        <p class="text-muted mb-0">
            Search vehicle makes, types, and models by year
        </p>
    </div>
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">

                <div class="col-md-5">
                    <label class="form-label fw-semibold">Car Make</label>
                    <select id="makeSelect" class="form-select">
                        <option></option>
                        @foreach (var make in Model)
                        {
                            <option value="@make.MakeID">@make.MakeName</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Manufacture Year</label>
                    <input type="number"
                           id="yearInput"
                           class="form-control"
                           placeholder="e.g. 2020"
                           min="1980"
                           max="@DateTime.Now.Year" />
                </div>

                <div class="col-md-4">
                    <button id="VehicleSearch"class="btn btn-primary w-100">Search Vehicles </button>
                </div>

            </div>
        </div>
    </div>
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h6 class="fw-semibold mb-3">Available Vehicle Types</h6>
            <div id="VehicleTypes" class="d-flex flex-wrap gap-2">
                <span class="text-muted">Select a make to see vehicle types</span>
            </div>
        </div>
    </div>
    <div class="card shadow-sm mb-5">
        <div class="card-body">
            <h6 class="fw-semibold mb-3">Available Models</h6>

            <table class="table table-striped table-bordered align-middle"
                   id="modelsTable"
                   style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>Make Name</th>
                        <th>Model Name</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="~/js/VehicleInfo.js"></script>


